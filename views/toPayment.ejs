<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>
    <%= configFunctions.getProperty("application.applicationName") %>
  </title>

  <link rel="icon" href="<%= urlPrefix %>/images/favicon.png" />

  <link rel="stylesheet" href="<%= urlPrefix %>/stylesheets/style.min.css" />
  <link rel="stylesheet" href="<%= urlPrefix %>/lib/fontawesome-free/css/all.min.css" />
</head>
<body>
  <div class="section">
    <main class="container">
      <%
        // header
        const headerEjs = configFunctions.getProperty("views.toPayment.headerEjs");
      %>
      <% if (headerEjs) { %>
        <%- include('../view-parts/headers/' + headerEjs); -%>
      <% } %>

      <%
        // store
        const storeType = configFunctions.getProperty("store.storeType");
      %>
      <%- include("../view-parts/stores/" + storeType + ".ejs"); -%>

      <%
        // footer
        const footerEjs = configFunctions.getProperty("views.toPayment.footerEjs");
      %>
      <% if (footerEjs) { %>
        <%- include('../view-parts/footers/' + footerEjs); -%>
      <% } %>
    </main>
  </div>
</body>
</html>
