<%
  const idPrefix = stringFns.getUID();
%>
<div class="message is-info">
  <p class="message-body">
    Please allow three to five business days for processing.
  </p>
</div>
<div class="field">
  <label class="label" for="<%= idPrefix %>_propertyAddress">
    Property Address:
  </label>
  <div class="control">
    <input class="input" id="<%= idPrefix %>_propertyAddress" name="propertyAddress" type="text" maxlength="100" required />
  </div>
</div>
<div class="columns">
  <div class="column is-two-thirds">
    <div class="field">
      <label class="label" for="<%= idPrefix %>_rollNumber">
        15 Digit Roll Number:
      </label>
      <div class="control">
        <input class="input" id="<%= idPrefix %>_rollNumber" name="rollNumber" type="text" pattern="0[1-6]0\d{12}" minlength="15" maxlength="15" inputmode="numeric" required />
      </div>
      <p class="help">Roll numbers should start with "0", followed by a number between "1" and "6".</p>
    </div>
  </div>
  <div class="column">
    <div class="field">
      <label class="label" for="<%= idPrefix %>_taxYear">
        Taxation Year:
      </label>
      <div class="control">
        <input class="input" id="<%= idPrefix %>_taxYear" name="taxYear" type="text" pattern="\d{4}" minlength="4" maxlength="4" inputmode="numeric" value="<%= new Date().getFullYear() - 1 %>" required />
      </div>
    </div>
  </div>
</div>
