        <option><%= currentYear - 11 %></option>
        <option><%= currentYear - 12 %></option>
        <option><%= currentYear - 13 %></option>
        <option><%= currentYear - 14 %></option>
        <option><%= currentYear - 15 %></option>
        <option><%= currentYear - 16 %></option>
        <option><%= currentYear - 17 %></option>
        <option><%= currentYear - 18 %></option>
        <option><%= currentYear - 19 %></option>
        <option><%= currentYear - 20 %></option>
      </select>
    </div>
  </div>
  <div class="control">
    <span class="button is-static">/</span>
  </div>
  <div class="control">
    <div class="select">
      <select id="<%= idPrefix %>_offenceDate-month" name="offenceDate-month" title="Offence Month" required>
        <option value="">(Month)</option>
        <option>01</option>
        <option>02</option>
        <option>03</option>
        <option>04</option>
        <option>05</option>
        <option>06</option>
        <option>07</option>
        <option>08</option>
        <option>09</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
      </select>
    </div>
  </div>
  <div class="control">
    <span class="button is-static">/</span>
  </div>
  <div class="control">
    <div class="select">
      <select id="<%= idPrefix %>_offenceDate-day" name="offenceDate-day" title="Offence Day" required>
        <option value="">(Day)</option>
        <option>01</option>
        <option>02</option>
        <option>03</option>
        <option>04</option>
