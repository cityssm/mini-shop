<label class="label" for="<%= idPrefix %>_nameOnTicket">
  Name on Ticket
</label>
<div class="field">
  <input class="input" id="<%= idPrefix %>_nameOnTicket" name="nameOnTicket" type="text" maxlength="100" required />
</div>

<label class="label" for="<%= idPrefix %>_unitPrice">
  Total Payable
</label>
<div class="field has-addons">
  <div class="control">
    <span class="button is-static">$</span>
  </div>
  <div class="control">
    <input class="input" id="<%= idPrefix %>_unitPrice" name="unitPrice" type="text" inputmode="numeric" minlength="2" maxlength="10" pattern="^\d+(\.\d\d)?" required />
  </div>
</div>

<script src="<%= urlPrefix %>/javascripts/product-ssm-ticket.js" defer></script>
